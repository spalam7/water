    <script>
        // 动态生成水滴背景
        function createWaterDrops() {
            const background = document.getElementById('water-drop-background');
            const dropCount = 25; // 水滴数量
            
            for (let i = 0; i < dropCount; i++) {
                const drop = document.createElement('div');
                drop.className = 'water-drop';
                
                // 随机大小 (10px - 40px)
                const size = Math.random() * 30 + 10;
                drop.style.width = `${size}px`;
                drop.style.height = `${size}px`;
                
                // 随机位置
                drop.style.left = `${Math.random() * 100}%`;
                
                // 随机透明度
                drop.style.opacity = Math.random() * 0.3 + 0.1;
                
                // 随机动画时长 (8s - 20s)
                const duration = Math.random() * 12 + 8;
                drop.style.animationDuration = `${duration}s`;
                
                // 随机动画延迟
                drop.style.animationDelay = `${Math.random() * 5}s`;
                
                background.appendChild(drop);
            }
        }
        
        // 条件显示逻辑：已安装净水器的用户显示额外问题
        document.querySelectorAll('input[name="installed"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const conditionalSection = document.getElementById('installed_conditional');
                if (this.value === '已安装') {
                    conditionalSection.style.display = 'block';
                } else {
                    conditionalSection.style.display = 'none';
                    // 清除条件部分的选择
                    conditionalSection.querySelectorAll('input').forEach(input => {
                        if (input.type === 'radio' || input.type === 'checkbox') {
                            input.checked = false;
                        } else if (input.type === 'text') {
                            input.value = '';
                        }
                    });
                }
            });
        });
        
        // 条件显示逻辑：愿意接受水质检测的用户显示联系方式输入框
        document.querySelectorAll('input[name="water_test"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const contactField = document.getElementById('contact_field');
                if (this.value === '愿意') {
                    contactField.style.display = 'block';
                    document.getElementById('contact_info').required = true;
                } else {
                    contactField.style.display = 'none';
                    document.getElementById('contact_info').required = false;
                }
            });
        });
        
        // 表单提交处理
        document.getElementById('survey-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // 这里可以添加表单验证
            
            // 收集表单数据
            const formData = new FormData(this);
            const data = {};
            formData.forEach((value, key) => {
                // 处理多选框
                if (data[key]) {
                    if (Array.isArray(data[key])) {
                        data[key].push(value);
                    } else {
                        data[key] = [data[key], value];
                    }
                } else {
                    data[key] = value;
                }
            });
            
            // 在实际应用中，这里应该将数据发送到服务器
            console.log('收集到的问卷数据:', data);
            
            // 显示感谢信息
            alert('感谢您参与本次调研！您的意见已成功提交。');
            this.reset();
            
            // 重置条件显示部分
            document.getElementById('installed_conditional').style.display = 'none';
            document.getElementById('contact_field').style.display = 'none';
        });
        
        // 初始化水滴背景
        window.addEventListener('load', createWaterDrops);
        
        // 窗口大小变化时重新生成水滴背景（保持响应式）
        window.addEventListener('resize', function() {
            const background = document.getElementById('water-drop-background');
            background.innerHTML = '';
            createWaterDrops();
        });
    </script>
</body>
</html>
